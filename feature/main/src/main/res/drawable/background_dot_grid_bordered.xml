<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <stroke
            android:width="2dp"
            android:color="#999999" /> </shape>
    </item>

    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <bitmap
            android:src="@drawable/small_dot_tile"
            android:tileMode="repeat" /> </item>

</layer-list>